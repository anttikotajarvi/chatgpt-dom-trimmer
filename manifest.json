{
  "manifest_version": 3,
  "name": "ChatGPT DOM Trimmer",
  "version": "0.5.2",
  "author": "Antti Kotaj√§rvi",
  "description": "Keeps ChatGPT tabs fast by trimming old DOM nodes and offering optional cleanup tools.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage"],
  "action": { "default_title": "ChatGPT DOM Trimmer" },
  "background": { "service_worker": "bg.js" },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "icons/*"],
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"]
    }
  ]
}
